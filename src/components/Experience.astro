const experiences = [
  {
    company: "Hospy",
    role: "Full Stack Developer",
    period: "nov 2024–feb 2025",
    achievements: [
      "Designed and developed an OCR (Optical Character Recognition) web service capable of verifying and extracting information from documents using computer vision.",
      "Implemented the integration of the Hospy project with another platform, expanding its reach and meeting the needs of new clients."
    ]
  },
  {
    company: "Canned Head",
    role: "Full Stack Developer",
    period: "nov 2021–nov 2023",
    achievements: [
      "Designed and developed a web service to automate the recording of Typeform responses, enabling metric and statistical calculations, displaying them in a dashboard, and generating PDF reports.",
      "Optimized the performance of a web platform, reducing load times by over 70%.",
      "Implemented unit tests to ensure code quality and efficiency in the company's projects.",
      "Designed and implemented automated scripts for the periodic collection and management of employee data, facilitating metric and statistical calculations."
    ]
  },
  {
    company: "Freelancer",
    role: "Python Developer",
    period: "sep 2020–oct 2021",
    achievements: [
      "Designed and developed a web service for content moderation using artificial intelligence models for image recognition and analysis.",
      "Built basic chatbots for customer support on messaging platforms such as WhatsApp, Telegram, and Facebook Messenger."
    ]
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold mb-8 bg-gradient-to-r from-accent-blue-light to-accent-purple-light dark:from-accent-blue-dark dark:to-accent-purple-dark text-transparent bg-clip-text">Professional Experience</h2>
  <div class="space-y-12">
    {experiences.map(exp => (
      <div class="border-l-2 border-accent-blue-light dark:border-accent-blue-dark pl-6 hover:border-accent-purple-light dark:hover:border-accent-purple-dark transition-colors">
        <h3 class="text-2xl font-semibold text-accent-blue-light dark:text-accent-blue-dark">{exp.company}</h3>
        <p class="text-lg text-accent-purple-light dark:text-accent-purple-dark mb-2">{exp.role} · {exp.period}</p>
        <ul class="list-disc list-inside space-y-3 text-secondary-light dark:text-secondary-dark">
          {exp.achievements.map(achievement => (
            <li class="hover:text-primary-light dark:hover:text-primary-dark transition-colors">{achievement}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>