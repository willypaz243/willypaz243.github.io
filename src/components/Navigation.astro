---
const sections = [
  { id: "about", label: "About", icon: "👨‍💻" },
  { id: "experience", label: "Experience", icon: "💼" },
  { id: "projects", label: "Projects", icon: "🚀" },
  { id: "skills", label: "Skills", icon: "🛠" }
];
---

<nav class="fixed left-4 top-1/2 -translate-y-1/2 z-50 hidden lg:block">
  <ul class="space-y-4">
    {sections.map(section => (
      <li>
        <a
          href={`#${section.id}`}
          class="flex items-center group"
        >
          <span class="w-10 h-10 flex items-center justify-center rounded-full bg-white dark:bg-gray-800 shadow-skill group-hover:shadow-md transition-all transform group-hover:-translate-x-1">
            {section.icon}
          </span>
          <span class="opacity-0 group-hover:opacity-100 pl-3 text-accent-blue-light dark:text-accent-blue-dark transition-opacity">
            {section.label}
          </span>
        </a>
      </li>
    ))}
  </ul>
</nav>

<!-- Mobile Navigation -->
<nav class="fixed bottom-4 left-1/2 -translate-x-1/2 z-50 lg:hidden">
  <ul class="flex gap-2 p-2 bg-white dark:bg-gray-800 rounded-full shadow-lg">
    {sections.map(section => (
      <li>
        <a
          href={`#${section.id}`}
          class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          title={section.label}
        >
          {section.icon}
        </a>
      </li>
    ))}
  </ul>
</nav>