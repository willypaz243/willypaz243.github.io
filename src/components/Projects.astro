---
const projects = [
  {
    title: "OCR Document Service",
    description: "Web service for document verification and information extraction using computer vision and OCR technology.",
    technologies: ["Python", "FastAPI", "OpenCV", "Tesseract"],
    link: "#"
  },
  {
    title: "Analytics Dashboard",
    description: "Automated system for processing Typeform responses with metrics calculation and PDF report generation.",
    technologies: ["React", "Node.js", "Express", "MongoDB"],
    link: "#"
  },
  {
    title: "AI Content Moderator",
    description: "Content moderation service using AI models for image recognition and analysis.",
    technologies: ["Python", "TensorFlow", "Flask", "Docker"],
    link: "#"
  }
];
---

<section class="mb-16">
  <h2 class="text-3xl font-bold mb-8 bg-gradient-to-r from-accent-blue-light to-accent-purple-light dark:from-accent-blue-dark dark:to-accent-purple-dark text-transparent bg-clip-text">Featured Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {projects.map(project => (
      <article class="p-8 rounded-xl bg-white dark:bg-gray-800 shadow-card hover:shadow-lg transition-all transform hover:-translate-y-1">
        <h3 class="text-2xl font-semibold mb-3 text-accent-blue-light dark:text-accent-blue-dark">
          {project.title}
        </h3>
        <p class="text-secondary-light dark:text-secondary-dark mb-6">
          {project.description}
        </p>
        <div class="flex flex-wrap gap-2 mb-6">
          {project.technologies.map(tech => (
            <span class="px-3 py-1 text-sm rounded-full bg-accent-purple-light/10 dark:bg-accent-purple-dark/10 text-accent-purple-light dark:text-accent-purple-dark">
              {tech}
            </span>
          ))}
        </div>
        <a 
          href={project.link}
          class="inline-flex items-center text-accent-blue-light dark:text-accent-blue-dark hover:text-accent-purple-light dark:hover:text-accent-purple-dark transition-colors"
        >
          View Project 
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </article>
    ))}
  </div>
</section>