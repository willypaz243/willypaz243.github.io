---
import ThemeToggle from '../components/ThemeToggle.astro';
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Willy Samuel Paz Colque - Portfolio</title>
    <meta name="description" content="Full Stack Web Developer with over 3 years of experience and nearly a decade of programming expertise." />
  </head>
  <body class="bg-background-light dark:bg-background-dark text-primary-light dark:text-primary-dark transition-colors">
    <ThemeToggle />
    <div class="relative">
      <div class="absolute inset-0 bg-gradient-to-br from-accent-blue-light/5 to-accent-purple-light/5 dark:from-accent-blue-dark/5 dark:to-accent-purple-dark/5 -z-10"></div>
      <slot />
    </div>
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
    scroll-padding-top: 2rem;
  }
  body {
    margin: 0;
    min-height: 100vh;
  }
</style>